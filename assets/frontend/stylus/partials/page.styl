.wrapper
    wrapper()

.servicesBlock
    &__row
        width 100%
        display flex
        justify-content: space-between
        align-items: center
    &__title
        position relative
        display flex
        align-items: center
        margin-left 20px
    &__title:before
        content: url(../images/images/backForm_yellow.png)
        position: absolute
        z-index -1
        margin-left -20px
    &__text
        margin-top 40px
        color fontColor
        margin-bottom 60px
.col-left 
    width 30%
.titleBlock 
    font-size 40px
    font-family fontSecond-sb
    line-height: 46px;
    letter-spacing: 0.035em;
    color #202020

.textBlock
    font-size 18px
    font-family fontSecond-r
    line-height: 160%;


.servicesList
    display flex
    &__item
        margin-right 25px
        margin-bottom 30px
        max-width: 308px
        width 100%
        height 380px
        box-shadow: 0px 10px 50px rgba(0, 0, 0, 0.05);
        border-radius: 40px;
    &__title
        font-size 24px
        font-family fontSecond-sb
    &__wrapp 
        width 100%
        display flex
        flex-direction: column
        align-items: center
        justify-content: space-evenly
        height 100%
    &__text
        text-align center
        font-size 16px
        color #757575
        font-family fontSecond-r

.arrowSlider
    display flex
    align-items: center
    &__wrapp
        width 82px
        height 58px
        border: 1px solid #F2F2F2
        border-radius: 15px
        margin-right 20px

