.headerBlock
    background-color: #F0FAFF
.header
    wrapper()
    position relative
.navWrapper
    display flex
    justify-content: space-between
    align-items: center
.nav
    position relative
    display flex
    margin-left: 30px
    padding: 0
    &__link
        font-size 16px
        font-family fontSecond-sb
        text-transform uppercase
        margin-right 28px
    &__link:hover
        color colorElem
.nav-contact
    display flex
    &__item
        margin-right 30px
        display flex
        align-items: center

.nav-contact__text 
    font-size 18px
    font-family fontSecond-sb
    &-min
        font-size 14px
        font-family fontSecond-r 

.navWrapper
    sm(display, none)
.mobile-wrapp
    display none
    sm(display, block)

.priceWrapper
    top: 30px
    background-color: #fff
    padding 10px
    position: absolute
    border-radius: 5px
    box-shadow: 6px 4px 15px rgba(228, 228, 228, 0.25);

.nav__link-submenu 
    margin-top 10px
    margin-bottom 10px
