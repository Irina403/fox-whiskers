#nav 
  width 100%
  overflow hidden
  background #fff
  height 0
  max-height 0px
  list-style-type none
  padding-left 0
  transition linear 1s


#nav.open 
  height auto
  max-height 500px
  transition linear 1s

#nav li 
  float none
  text-align left
  text-decoration none
  width 100%
  margin 0
  transition linear 1s

#nav li a 
  text-decoration none
  color #000
  padding 10px
  display block
  margin 0
  transition linear 1s
.nav-contact-desck
    sm(display, none)
.nav-contact-mobile
    display none
    sm(display, flex)
    sm(flex-wrap, wrap)
    sm(align-items, center)
    sm(justify-content, center)
    sm(margin-top, 30px)
.mobile-wrapp
    width 100%
    display flex
    align-items: center
    justify-content: space-between
.mobile-nav__link
    font-family fontSecond-r 
    font-size 18px
.bar1, .bar2, .bar3 
    width 35px
    height 5px
    background-color colorElem
    margin 6px 0
    transition 0.2s


.change .bar1 
    transform rotate(-45deg) translate(-9px, 6px) 

.change .bar2 
  opacity 0
  
.change .bar3 
    transform rotate(45deg) translate(-8px, -8px)

.priceWrapper
    display none
.priceMobile
    display none
    padding-left: 10px
#nav-price
    padding-bottom 5px

#mobile-nav__item
    display flex