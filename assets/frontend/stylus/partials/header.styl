.headerBlock
    background-color: #F0FAFF
.header
    wrapper()
    position relative
    sm(padding-bottom,20px)
.navWrapper
    display flex
    justify-content: space-between
    align-items: center
    sm(display, block)
.nav
    position relative
    display flex
    margin-left: 30px
    padding: 0
    &__link
        font-size 16px
        font-family fontSecond-sb
        text-transform uppercase
        margin-right 28px
        transition-duration: .4s;
    &__link:hover
        color colorElem
.nav-contact
    display flex
    &__item
        margin-right 20px
        display flex
        align-items: center

.nav-contact__text 
    font-size 18px
    font-family fontSecond-sb
    &-min
        font-size 14px
        font-family fontSecond-r 
        transition-duration: .4s;
    &-min:hover
        color colorElem

.mobile-navigation
    display none
    sm(display, block)

.navWrapper 
    sm(display, none)
.priceWrapper
    top: 20px
    background-color: #fff
    padding 10px
    position: absolute
    border-radius: 5px
    box-shadow: 6px 4px 15px rgba(228, 228, 228, 0.25);

.nav__link-submenu 
    margin-top 10px
    margin-bottom 10px
.logo-desck 
    sm(display, none)
// .logo img
