// a - необходимое значение
// b - значение родительского блока
countPersent(a, b)
    a = unit(a, px)
    b = unit(b, px)
    c = a / b * 100
    return unit(c, '%')

countFontSize(s)  
    f = 10
    a = (s - f) / 1920 * 100
    a = round(a,2)
    a = (a)vw
    f = f / 10
    f = (f)rem
    s = s / 10
    s = (s)rem
    return "min(calc(%s + %s), %s)" % (f a s)

countVW(s)
    f = s / 2 / 10
    f = (f)rem
    a = s / 2 / 1920 * 100
    a = round(a,2)
    a = (a)vw
    s = s / 10
    s = (s)rem
    return "min(calc(%s + %s), %s)" % (f a s)

fontSizeH1()
    font-size: clamp(1.5rem, 4vw + 1.25rem, 5.5rem);

fontSizeText()
    font-size: clamp(1.4rem, 4vw + 1.25rem, 1.8rem);

fontSizeH2()
    font-size: clamp(3.2rem, 4vw + 1.25rem, 4rem);


